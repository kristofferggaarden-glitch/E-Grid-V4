<!-- ComponentMappingWindow.xaml -->
<Window x:Class="WpfEGridApp.ComponentMappingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Komponent Mapping" Height="800" Width="1600"
        MinHeight="700" MinWidth="1400"
        Background="#FF1A2526"
        FontFamily="Inter, Segoe UI" FontSize="14">

    <Window.Resources>
        <!-- Color brushes -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#FF0078D4"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF00B294"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FFE6ECEC"/>
        <SolidColorBrush x:Key="PanelBackground" Color="#2A3B3C"/>
        <SolidColorBrush x:Key="CardBackground" Color="#1A2526"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#4A5A5B"/>

        <!-- Modern Button Style -->
        <Style TargetType="Button" x:Key="ModernButtonStyle">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF00A88F"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                             To="1.02" Duration="0:0:0.15"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                             To="1.02" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                             To="1.0" Duration="0:0:0.15"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                             To="1.0" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF008E7A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        </Style>

        <!-- Danger Button Style -->
        <Style TargetType="Button" x:Key="DangerButtonStyle" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FFFF4444"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFDD3333"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFCC2222"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style TargetType="Button" x:Key="SecondaryButtonStyle" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF5A6A6B"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF3A4A4B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Warning Button Style -->
        <Style TargetType="Button" x:Key="WarningButtonStyle" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FFFF8C00"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFE67E00"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFCC7000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style TargetType="TextBox" x:Key="ModernTextBoxStyle">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Background" Value="{StaticResource PanelBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FF00B294" BlurRadius="8" ShadowDepth="0" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="4" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Header Style -->
        <Style x:Key="CardHeaderStyle" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- Card Icon Style -->
        <Style x:Key="CardIconStyle" TargetType="Border">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
        </Style>

        <!-- Card Title Style -->
        <Style x:Key="CardTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Stats Card Style -->
        <Style x:Key="StatsCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PanelBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
        </Style>

        <!-- Mapping Item Style -->
        <Style x:Key="MappingItemStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PanelBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3A4B4C"/>
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Search Box Style -->
        <Style x:Key="SearchBoxStyle" TargetType="TextBox" BasedOn="{StaticResource ModernTextBoxStyle}">
            <Setter Property="Background" Value="{StaticResource PanelBackground}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <!-- Progress Bar Style -->
        <Style x:Key="ModernProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="8"/>
            <Setter Property="Background" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <Border Name="PART_Track" CornerRadius="4">
                                <Border Name="PART_Indicator" 
                                        Background="{TemplateBinding Foreground}" 
                                        HorizontalAlignment="Left" 
                                        CornerRadius="4"/>
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource PanelBackground}" CornerRadius="16" Margin="20" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,30">
                <TextBlock Text="Komponent Mapping" FontSize="28" FontWeight="Bold" 
                          Foreground="{StaticResource TextBrush}" Margin="0,0,0,8"/>
                <TextBlock Text="Organisér og administrer mappinger mellom Excel-referanser og grid-posisjoner" 
                          FontSize="14" Foreground="#FFB0B8B8" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Main Card Layout -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="1.3*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="1.3*"/>
                </Grid.ColumnDefinitions>

                <!-- Card 1: Mappings Overview -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Card Header -->
                        <StackPanel Grid.Row="0" Style="{StaticResource CardHeaderStyle}">
                            <Border Style="{StaticResource CardIconStyle}">
                                <TextBlock Text="📋" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Mappings Oversikt" Style="{StaticResource CardTitleStyle}"/>
                        </StackPanel>

                        <!-- Search Box -->
                        <TextBox x:Name="SearchMappingsBox" Grid.Row="1" 
                                Style="{StaticResource SearchBoxStyle}"
                                Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                TextChanged="SearchMappings_TextChanged"
                                ToolTip="Søk i eksisterende mappings">
                            <TextBox.Template>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="🔍" FontSize="14" 
                                                      Foreground="#FFB0B8B8" Margin="12,0,8,0" 
                                                      VerticalAlignment="Center"/>
                                            <ScrollViewer Grid.Column="1" Margin="0" x:Name="PART_ContentHost"/>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsKeyboardFocused" Value="True">
                                            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </TextBox.Template>
                        </TextBox>

                        <!-- Statistics -->
                        <Grid Grid.Row="2" Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Style="{StaticResource StatsCardStyle}">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock x:Name="TotalMappingsCount" Text="0" FontSize="24" FontWeight="Bold" 
                                              Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Totale Mappings" FontSize="11" Foreground="#FFB0B8B8" 
                                              HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2" Style="{StaticResource StatsCardStyle}">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock x:Name="ComponentMappingsCount" Text="0" FontSize="24" FontWeight="Bold" 
                                              Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Komponenter" FontSize="11" Foreground="#FFB0B8B8" 
                                              HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="4" Style="{StaticResource StatsCardStyle}">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock x:Name="SpecialMappingsCount" Text="0" FontSize="24" FontWeight="Bold" 
                                              Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Motor/Door" FontSize="11" Foreground="#FFB0B8B8" 
                                              HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Mappings List -->
                        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" 
                                     HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl x:Name="MappingsList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource MappingItemStyle}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding ExcelReference}" 
                                                              FontWeight="SemiBold" FontSize="15"
                                                              Foreground="{StaticResource AccentBrush}"/>
                                                    <TextBlock Text="{Binding GridPosition}" 
                                                              FontSize="12" Foreground="#FFB0B8B8" Margin="0,2,0,0"/>
                                                </StackPanel>

                                                <Button Grid.Column="1" Content="🗑️" Width="32" Height="32"
                                                       Style="{StaticResource DangerButtonStyle}"
                                                       Margin="0" Padding="0" FontSize="14"
                                                       Click="DeleteMapping_Click"
                                                       Tag="{Binding ExcelReference}"
                                                       ToolTip="Slett denne mappingen"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Quick Actions -->
                        <StackPanel Grid.Row="4" Margin="0,15,0,0">
                            <Button Content="🗑️ Slett alle mappings" 
                                    Click="ClearAllMappings_Click" 
                                    Style="{StaticResource DangerButtonStyle}"
                                    ToolTip="Fjern alle eksisterende mappings"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Card 2: Add Mapping -->
                <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Card Header -->
                        <StackPanel Grid.Row="0" Style="{StaticResource CardHeaderStyle}">
                            <Border Style="{StaticResource CardIconStyle}">
                                <TextBlock Text="➕" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Legg til Mapping" Style="{StaticResource CardTitleStyle}"/>
                        </StackPanel>

                        <!-- Input Section -->
                        <StackPanel Grid.Row="1">
                            <TextBlock Text="Excel Referanse" FontSize="13" Foreground="#FFB0B8B8" Margin="0,0,0,8"/>
                            <TextBox x:Name="NewExcelReference" 
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     ToolTip="F1, X2:41, K3, etc."/>

                            <Button Content="🎯 Start Interaktiv Mapping" 
                                    Click="StartInteractiveMapping_Click" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    ToolTip="Klikk på grid-posisjon for å mappe komponenten"/>
                        </StackPanel>

                        <!-- Separator -->
                        <Border Grid.Row="2" Height="1" Background="{StaticResource BorderBrush}" 
                               Margin="0,20,0,20"/>

                        <!-- Auto-mapping Section -->
                        <StackPanel Grid.Row="3">
                            <TextBlock Text="Auto-mapping" FontSize="16" FontWeight="SemiBold" 
                                      Foreground="{StaticResource TextBrush}" Margin="0,0,0,15"/>

                            <Button Content="🔍 Finn umappede referanser" 
                                    Click="FindUnmappedReferences_Click" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    ToolTip="Søk gjennom Excel for komponenter som ikke er mappet"/>

                            <Button Content="🚀 Start spesifikk mapping" 
                                    Click="StartSpecificMapping_Click" 
                                    Style="{StaticResource WarningButtonStyle}"
                                    ToolTip="Map hver unik Excel-celle individuelt"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Card 3: Processing & Status -->
                <Border Grid.Column="4" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Card Header -->
                        <StackPanel Grid.Row="0" Style="{StaticResource CardHeaderStyle}">
                            <Border Style="{StaticResource CardIconStyle}">
                                <TextBlock Text="⚡" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Prosessering" Style="{StaticResource CardTitleStyle}"/>
                        </StackPanel>

                        <!-- Progress Section -->
                        <StackPanel Grid.Row="1" Margin="0,0,0,20">
                            <Grid Margin="0,0,0,8">
                                <TextBlock Text="Mapping fullførelse" FontSize="13" Foreground="#FFB0B8B8" 
                                          HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <TextBlock x:Name="ProgressPercentageText" Text="0%" FontSize="13" 
                                          Foreground="{StaticResource AccentBrush}" FontWeight="SemiBold"
                                          HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>
                            <ProgressBar x:Name="MappingProgressBar" 
                                        Style="{StaticResource ModernProgressBarStyle}"
                                        Value="0" Maximum="100"/>
                        </StackPanel>

                        <!-- Processing Buttons -->
                        <StackPanel Grid.Row="2">
                            <Button Content="⚡ Prosesser alle ledninger" 
                                    Click="ProcessAllWithMappings_Click" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    ToolTip="Bruk mappings til å automatisk måle alle ledninger"/>

                            <Button Content="🧪 Test prosessering" 
                                    Click="TestProcessing_Click" 
                                    Style="{StaticResource WarningButtonStyle}"
                                    ToolTip="Test prosessering uten å skrive til Excel"/>
                        </StackPanel>

                        <!-- Status Panel -->
                        <Border Grid.Row="3" Background="{StaticResource PanelBackground}" 
                               BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                               CornerRadius="8" Padding="15" Margin="0,20,0,0">
                            <StackPanel>
                                <TextBlock Text="Status" FontSize="12" Foreground="#FFB0B8B8" Margin="0,0,0,8"/>
                                <TextBlock x:Name="ProcessingStatusText" Text="Klar for prosessering" 
                                          Foreground="{StaticResource AccentBrush}" FontWeight="Medium" FontSize="14"/>
                                <TextBlock x:Name="LastProcessingResultText" Text="" 
                                          Foreground="#FFB0B8B8" FontSize="12" Margin="0,4,0,0" 
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <!-- Unmapped References List -->
                        <Border Grid.Row="4" Background="{StaticResource PanelBackground}" 
                               BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                               CornerRadius="8" Padding="15" Margin="0,20,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="Umappede referanser" FontSize="14" FontWeight="SemiBold"
                                          Foreground="{StaticResource TextBrush}" Margin="0,0,0,10"/>

                                <ScrollViewer Grid.Row="1" MaxHeight="200" VerticalScrollBarVisibility="Auto"
                                             HorizontalScrollBarVisibility="Disabled">
                                    <ItemsControl x:Name="UnmappedReferencesList">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="Transparent" Padding="6,4" Margin="0,0,0,4"
                                                       Style="{StaticResource MappingItemStyle}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected}" 
                                                                 VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                        <TextBlock Grid.Column="1" Text="{Binding Reference}" 
                                                                  FontSize="13" Foreground="{StaticResource TextBrush}"
                                                                  VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>

                                <Button Grid.Row="2" Content="🎯 Start mapping av valgte" 
                                        Click="StartSelectedMapping_Click" 
                                        Style="{StaticResource ModernButtonStyle}"
                                        Margin="0,10,0,0"
                                        ToolTip="Start sekvensiell mapping av valgte referanser"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Status Bar -->
            <Border Grid.Row="2" Background="{StaticResource CardBackground}" 
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                    CornerRadius="8" Padding="15" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Width="8" Height="8" CornerRadius="4" 
                           Background="{StaticResource AccentBrush}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Grid.Column="1" x:Name="StatusText" Text="Klar for mapping operasjoner" 
                              Foreground="{StaticResource TextBrush}" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="2" x:Name="TimestampText" Text="" 
                              Foreground="#FFB0B8B8" FontSize="12" VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="📊 Eksporter mappings" 
                        Click="ExportMappings_Click"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="0,0,10,0"
                        ToolTip="Eksporter mappings til fil"/>
                <Button Content="📁 Importer mappings" 
                        Click="ImportMappings_Click"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="0,0,10,0"
                        ToolTip="Importer mappings fra fil"/>
                <Button Content="❌ Lukk" Click="Close_Click" 
                        Style="{StaticResource SecondaryButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>